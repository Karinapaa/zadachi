print ('Введите произвольное число:')
chislo = float(input())
print ('Введите пограничное число:')
gran = float(input())
if chislo < gran: #1-ое число меньше пограничного
    print ('1 число {} меньше пограничного {}'.format (chislo, gran))
elif chislo > gran: #1-ое число больше пограничного
    print ('1 число {} больше пограничного {}'.format (chislo, gran))
    #1-ое число больше пограничного более, чем в 3 раза
    if (gran * 3) == chislo:
        print ('1 число {} больше пограничного {} ровно в 3 раза'.format (chislo, gran))
    elif (gran * 3) < chislo:
        print('1 число {} больше пограничного {} более чем в 3 раза'.format (chislo, gran))
else:
    print ('1 число относится к пограничному способом, не описанным в условиях задачи')
